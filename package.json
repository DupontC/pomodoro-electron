{
  "name": "Pomodoro",
  "version": "0.0.3-alpha",
  "repository": "git@github.com:veloxy/pomodoro-electron.git",
  "bugs": {
    "url": "https://github.com/veloxy/pomodoro-electron/issues"
  },
  "description": "Pomodoro in electron",
  "main": "src/index.js",
  "scripts": {
    "start": "electron ./src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack-linux": "electron-packager . Pomodoro --asar.unpack=protocol-link.html --overwrite --platform=linux --arch=x64 --out=out",
    "pack-win": "electron-packager . Pomodoro --asar.unpack=protocol-link.html --overwrite --platform=win32 --arch=ia32 --icon=src/assets/icons/icon.icns --out=out",
    "pack-mac": "electron-packager . Pomodoro --asar.unpack=protocol-link.html --overwrite --platform=darwin --arch=x64 --icon=src/assets/icons/app.icns --out=out",
    "build": "npm run pack-linux && npm run pack-mac && npm run pack-win",
    "release-mac":"npm run pack-mac && appdmg appdmg.json out/Pomodoro-darwin-x64.dmg",
    "release-win":"npm run pack-win && node ./src/installer/SetupWindows.js ",
    "release-linux":"npm run pack-linux && tar -zcvf out/pomodoro.tar.gz out/Pomodoro-linux-x64"
  },
  "author": ["Kevin Vandenborne","Cyril Dupont"],
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.3.5",
    "electron-packager": "^8.5.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^2.5.2",
    "jshint": "^2.9.1"
  },
  "optionalDependencies": {
    "appdmg": "^0.4.5"
  }
}

